<Application x:Class="ControleFrota.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ControleFrota"
             xmlns:dialogWindows="clr-namespace:ControleFrota.Views.DialogWindows"
             xmlns:dialogviewmodels="clr-namespace:ControleFrota.ViewModels.DialogWindows"
             xmlns:viewmodels="clr-namespace:ControleFrota.ViewModels"
             xmlns:views="clr-namespace:ControleFrota.Views">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewmodels:ListagemVeículosViewModel}">
            <views:ListagemVeículosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ListagemFuncionáriosViewModel}">
            <views:ListagemFuncionáriosView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type dialogviewmodels:WorkInProgressViewModel}">
            <dialogWindows:WorkInProgressView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type dialogviewmodels:CadastroVeículoViewModel}">
            <dialogWindows:CadastroVeículoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type dialogviewmodels:CadastroMotoristaViewModel}">
            <dialogWindows:CadastroMotoristaView/>
        </DataTemplate>
    </Application.Resources>
</Application>
