<UserControl x:Class="ControleFrota.Views.MenuPadrãoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControleFrota.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Horizontal" Background="LightGray">
            <Button Content="Cadastrar" Padding="10, 5" Margin="5" FontSize="20" FontWeight="Normal" FontFamily="Lato" Command="{Binding Cadastrar}"/>
            <Button Content="Editar" Padding="10, 5" Margin="5" FontSize="20" FontWeight="Normal" FontFamily="Lato" Command="{Binding Editar}"/>
            <Button Content="Inativar" Padding="10, 5" Margin="5" FontSize="20" FontWeight="Normal" FontFamily="Lato" Command="{Binding Inativar}"/>
            <Button Content="Filtrar" Padding="10, 5" Margin="5" FontSize="20" FontWeight="Normal" FontFamily="Lato" Command="{Binding Filtrar}"/>
            <Button Content="Imprimir" Padding="10, 5" Margin="5" FontSize="20" FontWeight="Normal" FontFamily="Lato" Command="{Binding Imprimir}"/>
        </StackPanel>
    </Grid>
</UserControl>
